<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="25dp"
    tools:context=".SignUpActivity">


    <EditText
        android:layout_width="0dp"
        android:id="@+id/signupname"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:minHeight="48dp"
        android:hint="Student Name"
        android:padding="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        />

    <EditText
        android:layout_width="0dp"
        android:id="@+id/signupage"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:minHeight="48dp"
        android:hint="Student Age"
        android:padding="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/signupname"
        app:layout_constraintBottom_toTopOf="@id/signupname"
        android:layout_marginTop="100dp"
        />

    <EditText
        android:layout_width="0dp"
        android:id="@+id/signupaddress"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:minHeight="48dp"
        android:hint="Student Address"
        android:padding="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/signupage"
        app:layout_constraintBottom_toTopOf="@id/signupage"
        android:layout_marginTop="120dp"
        />

    <EditText
        android:layout_width="0dp"
        android:id="@+id/signupemail"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:minHeight="48dp"
        android:hint="Student Email"
        android:padding="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/signupaddress"
        app:layout_constraintBottom_toTopOf="@id/signupaddress"
        android:layout_marginTop="170dp"
        />

    <Button
        android:layout_width="0dp"
        android:id="@+id/signUpButton"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:hint="Sign Up"
        android:padding="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/signupemail"
        app:layout_constraintBottom_toTopOf="@id/signupemail"
        android:layout_marginTop="400dp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>